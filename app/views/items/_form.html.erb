<%= form_for(@item, html: { multipart: true }) do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div id="images">
    <% unless @item.image_url.nil? %>
      <%= image_tag @item.image_url(:thumbnail).to_s %>
    <% else %>
      <%= f.file_field :image %>
    <% end %>
  </div>

  <% unless @item.image_url.nil? %>
    <div class="field">
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :description %><br />
      <%= f.text_area :description %>
    </div>
    <div class="actions">
      <%= f.submit 'Publish' %>
    </div>
  <% end %>
<% end %>

<script id="upload_template" type="text/x-tmpl">
<div class="upload">
  {%= o.name %}
  <div class="progress"><div class="bar" style="width: 0%"></div></div>
</div>
</script>
